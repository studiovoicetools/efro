{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // âœ… Base URL fÃ¼r Alias-Pfade
    "baseUrl": ".",

    // âœ… Einheitliche Alias-Mappings fÃ¼r alle Projektteile
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/utils/*": ["src/utils/*"],
      "@/lib/*": ["src/lib/*"]
    },

    // âœ… Next.js TypeScript Plugin
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  "exclude": [
  
  "**/*.spec.ts",
    "src/efro_legacy/**/*",
  "node_modules",
  "src_backup",
  "_backups/**/*",

  "**/*.bak",
  "**/*.bak_*",
  "**/*.BROKEN*"
]

}


